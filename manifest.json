{
  "manifest_version": 2,

  "name": "Paste-it",
  "description": "Chrome extension to remove tedious copy and paste",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["hot-reload.js"]
  }
}