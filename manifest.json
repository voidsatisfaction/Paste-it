{
  "manifest_version": 2,

  "name": "Paste-it",
  "description": "Chrome extension to remove tedious copy and paste",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["hot-reload.js", "innerPage.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "icon.png"
  }
}